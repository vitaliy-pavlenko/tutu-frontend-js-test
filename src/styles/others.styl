.table
  table-layout fixed
  th
  td
    text-align center

.pagination-wrap
  text-align center

.loader
  position fixed
  width 100%
  height 100%
  top 0
  z-index 99998
  background #000
  opacity 0.6

.loader-shade
  border-radius 50%
  width 100px
  height 100px
  border 15px solid #fff
  border-top-color #2565ee
  animation spin 8s infinite linear
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -50px;
  margin-left: -50px;
  z-index: 99999;

@keyframes spin
  0%
    border-top-color white
    transform rotate(0deg)
  5%
    border-top-color #2565ee
  12.5%
    border-top-color #2565ee
    transform rotate(360deg)
  25%
    border-top-color #f63535
    transform rotate(360*2deg)
  37.5%
    border-top-color #f63535
    transform rotate(360*3deg)
  50%
    border-top-color #ffd700
    transform rotate(360*4deg)
  62.5%
    border-top-color #ffd700
    transform rotate(360*5deg)
  75%
    border-top-color #49b687
    transform rotate(360*6deg)
  87.5%
    border-top-color #49b687
    transform rotate(360*7deg)
  95%
    border-top-color #49b687
  100%
    border-top-color white
    transform rotate(360*8deg)